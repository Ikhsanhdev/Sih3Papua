@{
    ViewBag.Title = "Hidrologi";
}

@* @section Styles {
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true" />
} *@

<div class="container py-4">
    <!-- Judul -->
    <div class="text-center mb-5 mt-10">
        <h5 class="fw-bold">Publikasi</h5>
        <h4 class=" fw-bolder mb-0">DATABASE BWS PAPUA</h4>
    </div>

    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-center">
            <div id="map"
                style="width: 100%; height: 550px; background: #e9ecef; display: flex; align-items: center; justify-content: center;">
                <span class="text-secondary">Loading Map...</span>
            </div>
        </div>
    </div>


    <!-- Filter Dropdown -->
    <div class="card mb-4 ">
        <div class="card-body">
            <form>
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold" for="dropdown-pos">Nama Pos Hidrologi</label>
                        <select class="form-select" id="dropdown-pos">
                            <option selected disabled>Pilih Pos</option>
                            <option value="pos1">Pos Sentani</option>
                            <option value="pos2">Pos Jayapura</option>
                            <option value="pos3">Pos Merauke</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold" for="dropdown-tahun">Tahun</label>
                        <select class="form-select" id="dropdown-tahun">
                            <option selected disabled>Pilih Tahun</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold" for="dropdown-bulan">Bulan</label>
                        <select class="form-select" id="dropdown-bulan">
                            <option selected disabled>Pilih Bulan</option>
                            <option value="1">Januari</option>
                            <option value="2">Februari</option>
                            <option value="3">Maret</option>
                            <option value="4">April</option>
                            <option value="5">Mei</option>
                            <option value="6">Juni</option>
                            <option value="7">Juli</option>
                            <option value="8">Agustus</option>
                            <option value="9">September</option>
                            <option value="10">Oktober</option>
                            <option value="11">November</option>
                            <option value="12">Desember</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12 d-grid d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-search me-2"></i>Tampilkan Data
                        </button>
                        <button type="button" class="btn btn-outline-info btn-lg ms-md-3 mt-2 mt-md-0 px-4">
                            <i class="bi bi-download me-2"></i>Download
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabel Data Hidrologi -->
    <div class="card mt-4 ">
        <div class="card-body">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table striped-table mb-0">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Data Hidrologi</th>
                                <th scope="col"> </th>
                                <th scope="col"> </th>
                                <th scope="col" class="text-center">Link Terkait</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>
                                    Data Curah Hujan
                                </td>
                                <td></td>
                                <td></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-info btn-lg ms-md-3 mt-2 mt-md-0 px-4">
                                        <i class="bi bi-download me-2"></i>Download
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>
                                    Data Tinggi Muka Air
                                </td>
                                <td></td>
                                <td></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-info btn-lg ms-md-3 mt-2 mt-md-0 px-4">
                                        <i class="bi bi-download me-2"></i>Download
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>
                                    Data Debit Air
                                </td>
                                <td></td>
                                <td></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-info btn-lg ms-md-3 mt-2 mt-md-0 px-4">
                                        <i class="bi bi-download me-2"></i>Download
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>
                                    Data Kualitas Air
                                </td>
                                <td></td>
                                <td></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-info btn-lg ms-md-3 mt-2 mt-md-0 px-4">
                                        <i class="bi bi-download me-2"></i>Download
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>
                                    Data Klimatologi
                                </td>
                                <td></td>
                                <td></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-info btn-lg ms-md-3 mt-2 mt-md-0 px-4">
                                        <i class="bi bi-download me-2"></i>Download
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>6</td>
                                <td>
                                    Data Neraca Air
                                </td>
                                <td></td>
                                <td></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-info btn-lg ms-md-3 mt-2 mt-md-0 px-4">
                                        <i class="bi bi-download me-2"></i>Download
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- card end -->
</div>

@section Scripts {
    <script>
        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: -2.5489, lng: 138.0149 },
                zoom: 6,
                mapTypeId: 'terrain'
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap" async
        defer></script>
}