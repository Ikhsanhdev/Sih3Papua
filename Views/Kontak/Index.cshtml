@{
    ViewData["Title"] = "Kontak";
}

<div class="contact-section"
    style="background: url('/images/contact.jpg') center center/cover no-repeat fixed; min-height: 100vh; background-attachment: fixed; background-size: cover; background-position: center;">
    <div class="container-lg py-5">
        <!-- Bagian Atas: Info Kontak -->
        <div class="row text-center mb-5">
            <div class="col-md-3 mb-4">
                <div class="p-4 rgba(255, 255, 255, 0.4) bg-opacity-75 rounded shadow-sm h-100">
                    <i class="fas fa-map-marker-alt fa-2x text-primary mb-3"></i>
                    <h6 class="fw-bold">OUR MAIN OFFICE</h6>
                    <p class="text-muted mb-0">Jl. Raya Abepura Wahno<br>Samping Kompleks Otonom,<br>Jayapura, Papua
                        99225</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="p-4 rgba(255, 255, 255, 0.4) bg-opacity-75 rounded shadow-sm h-100">
                    <i class="fas fa-phone fa-2x text-success mb-3"></i>
                    <h6 class="fw-bold">PHONE NUMBER</h6>
                    <p class="text-muted mb-0">0967-123456<br>0888-8888-8888 (Toll Free)</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="p-4 rgba(255, 255, 255, 0.4) bg-opacity-75 rounded shadow-sm h-100">
                    <i class="fas fa-fax fa-2x text-secondary mb-3"></i>
                    <h6 class="fw-bold">FAX</h6>
                    <p class="text-muted mb-0">1-234-567-8900</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="p-4 rgba(255, 255, 255, 0.4) bg-opacity-75 rounded shadow-sm h-100">
                    <i class="fas fa-envelope fa-2x text-warning mb-3"></i>
                    <h6 class="fw-bold">EMAIL</h6>
                    <p class="text-muted mb-0"><a href="mailto:info@sih3papua.id"
                            class="text-decoration-none">info@sih3papua.id</a></p>
                </div>
            </div>
        </div>

        <!-- Bagian Form dan Map -->
        <div class="row g-0" style="min-height: 500px;">
            <!-- Form Kontak -->
            <div class="col-md-6 d-flex align-items-stretch">
                <div class="p-4 w-100 d-flex flex-column justify-content-center"
                    style="background: rgba(0,0,0,0.4); color: #fff; border-radius: 0.5rem;">
                    <h4 class="mb-4">Contact info</h4>
                    <form method="post" class="d-flex flex-column gap-3">
                        <div class="d-flex gap-2">
                            <input type="email" name="email" class="form-control"
                                placeholder="Enter a valid email address" required />
                            <input type="text" name="nama" class="form-control" placeholder="Enter your Name"
                                required />
                        </div>
                        <textarea name="pesan" class="form-control" rows="4" placeholder="Enter your message"
                            required></textarea>
                        <button type="submit" class="btn btn-light fw-bold w-100">SUBMIT</button>
                    </form>
                </div>
            </div>

            <!-- Google Map -->
            <div class="col-md-6 d-flex align-items-stretch">
                <div class="w-100">
                    <iframe src="https://www.google.com/maps?q=40.7831,-73.9712&hl=en&z=12&output=embed" width="100%"
                        height="100%" style="border: none;"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
